---
import Navigation from "../components/navigation.astro";
import Hero from "../components/hero.astro";
import Highlight from "../components/highlight.astro";
import Features from "../components/features.astro";
import Footer from "../components/footer.astro";
import Quote from "../components/ui/quote.astro";
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="Natalia Lassance is a Product Designer and Developer passionate about creating great user experiences and making data-driven design decisions." />
		<meta name="keywords" content="UX Design, User Experience, UI Design, User Interface, Product Design, Digital Experiences, Data-driven Design" />
		<meta name="author" content="Natalia Lassance" />
		<meta property="og:title" content="Natalia Lassance" />
		<meta property="og:description" content="Natalia Lassance is a Product Designer and Developer passionate about creating great user experiences and making data-driven design decisions." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://natalialassance.com/" />
		<title>Natalia Lassance</title>
	</head>
	<body>
		<div class="bg-white overflow-hidden w-full flex">
			<div class="flex relative flex-col items-center bg-white overflow-y-scroll">
				<Navigation />
				<Hero />
				<Quote>
					I'm passionate about creating great user experiences and making data-driven design decisions.
				</Quote>
				<Highlight />
				<Quote>
					I create intuitive digital experiences across platforms, turning complex challenges into user-friendly solutions.
				</Quote>
				<Features />
				<Footer />
			</div>
		</div>
	</body>
</html>
